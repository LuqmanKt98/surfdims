rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write only their own profile document
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Boards: Public read, Owner write with validation
    match /boards/{boardId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.resource.data.sellerId == request.auth.uid
                    && request.resource.data.status == 'Live'
                    // Enforce paid/new vs free/used relationship
                    && (
                      (request.resource.data.condition == 'New' && request.resource.data.isPaid == true)
                      || 
                      (request.resource.data.condition == 'Used' && request.resource.data.isPaid == false)
                    )
                    // Schema Compliance Validation
                    && request.resource.data.ownerId == request.auth.uid
                    && request.resource.data.lifecycleStatus == 'active'
                    && (
                      (request.resource.data.condition == 'New' && request.resource.data.listingType == 'new')
                      ||
                      (request.resource.data.condition == 'Used' && request.resource.data.listingType == 'used')
                    )
                    && request.resource.data.storagePath == ('images/' + request.auth.uid);
                    // Note: Enforcing exact 'expiresAt' date math in Rules is possible but complex due to timestamp conversions.
                    // Ideally we'd check: request.resource.data.expiresAt == request.time + duration
                    // For now, ensuring isPaid aligns with Condition is the critical business rule requested.

      allow update: if request.auth != null 
                    && resource.data.sellerId == request.auth.uid
                    // 1. Critical Immutable Fields: Seller, Condition, IsPaid + New Schema Fields
                    && request.resource.data.sellerId == resource.data.sellerId
                    && request.resource.data.condition == resource.data.condition
                    && request.resource.data.isPaid == resource.data.isPaid
                    && request.resource.data.ownerId == resource.data.ownerId
                    && request.resource.data.listingType == resource.data.listingType
                    && request.resource.data.createdAt == resource.data.createdAt
                    && (
                        // Scenario A: Normal Edit (Status Unchanged)
                        (
                           request.resource.data.status == resource.data.status
                           // Prevent tampering with dates during normal edit
                           && request.resource.data.expiresAt == resource.data.expiresAt
                           && request.resource.data.listedDate == resource.data.listedDate
                           && request.resource.data.lifecycleStatus == resource.data.lifecycleStatus
                        )
                        ||
                        // Scenario B: Renewal / Reactivation (Status changes to Live)
                        (
                           request.resource.data.status == 'Live'
                           && resource.data.status != 'Live'
                           && request.resource.data.lifecycleStatus == 'active'
                           // Allow date updates for renewal, logic handled by client but we permit the change here
                        )
                        ||
                        // Scenario C: Deactivation / Sold (Status changes from Live)
                        (
                           (request.resource.data.status == 'Sold' || request.resource.data.status == 'Expired')
                           && resource.data.status == 'Live'
                           && request.resource.data.lifecycleStatus == 'inactive'
                           && request.resource.data.inactiveAt != null
                        )
                    );
                    
      allow delete: if request.auth != null && resource.data.sellerId == request.auth.uid;
    }
    
    // Keep other collections secure by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}